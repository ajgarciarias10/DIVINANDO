<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_game"
    tools:context=".ChainActivity">

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Round 1    0 Points" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/GroupA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvChainA1,tvChainA2,tvChainA3,tvChainA4,tvChainA5" />

    <TextView
        android:id="@+id/tvChainA1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvScore"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA3"
        app:layout_constraintStart_toEndOf="@+id/tvChainA1"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA4"
        app:layout_constraintStart_toEndOf="@+id/tvChainA2"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA5"
        app:layout_constraintStart_toEndOf="@+id/tvChainA3"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChainA4"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/GroupB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvChainB1,tvChainB2,tvChainB3,tvChainB4,tvChainB5" />

    <TextView
        android:id="@+id/tvChainB1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#3E4243"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/borderletter"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvChainC1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#3E4243"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/borderletter"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB1"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#3E4243"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/borderletter"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB2"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#3E4243"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/borderletter"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB3"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB5"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#3E4243"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/borderletter"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChainB4"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/GroupC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvChainC1,tvChainC2,tvChainC3,tvChainC4,tvChainC5" />

    <EditText
        android:id="@+id/tvChainC1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvChainC2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChainB1"
        tools:ignore="DuplicateSpeakableTextCheck"
        tools:text="A" />

    <EditText
        android:id="@+id/tvChainC2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainC1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainC3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainC1"
        app:layout_constraintTop_toTopOf="@+id/tvChainC1"
        app:layout_constraintVertical_bias="0.0"
        tools:text="A" />

    <EditText
        android:id="@+id/tvChainC3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainC1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainC4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainC2"
        app:layout_constraintTop_toTopOf="@+id/tvChainC1"
        app:layout_constraintVertical_bias="0.0"
        tools:text="A" />

    <EditText
        android:id="@+id/tvChainC4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainC1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainC5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainC3"
        app:layout_constraintTop_toTopOf="@+id/tvChainC1"
        app:layout_constraintVertical_bias="0.0"
        tools:text="A" />

    <EditText
        android:id="@+id/tvChainC5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:ems="10"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainC1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChainC4"
        app:layout_constraintTop_toTopOf="@+id/tvChainC1"
        tools:text="A" />

    <Button
        android:id="@+id/btNextChain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/next"
        android:textColor="@color/appcolor1"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvChainA5"
        app:layout_constraintStart_toStartOf="@+id/tvChainA1"
        app:layout_constraintTop_toBottomOf="@+id/tvChainC1"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>